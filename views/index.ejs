<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bingo Caller</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Bingo Caller</h1>
        <div id="bingo-board">
            <% for(let i = 1; i <= 75; i++) { %>
                <div class="number <% if (calledNumbers.includes(i)) { %> called <% } %>">
                    <%= i %>
                </div>
            <% } %>
        </div>
        <button id="call-number">Call Next</button>
        <h2 id="called-number"></h2>
        <h3 id="phrase"></h3>
    </div>

    <script src="/js/bingo.js"></script>
</body>
</html>
